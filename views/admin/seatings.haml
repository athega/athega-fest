.row.seatings
  .twelve.offset-by-four.columns
    %h1 Sittningar
  .three.columns
    = haml :'admin/menu', :layout => false
  .twelve.offset-by-one.columns
    %form{ :action => "/admin/seatings", :method => 'POST' }
      %fieldset
        .row.remove-bottom
          .one.column.alpha
            %input#new_seating_key{ :type => 'text', :name => 'key' }
          .three.columns
            %input#new_seating_title{ :type => 'text', :name => 'title' }
          .four.columns
            %input#new_seating_starts_at{ :type => 'text', :name => 'starts_at' }
          .two.columns.omega
            %input{ :type => 'submit', :value => 'LÃ¤gg till' }

    - seatings.each do |seating|
      %form{ :action => "/admin/seatings/#{seating.key}", :method => 'POST' }
        %fieldset
          .row.remove-bottom
            .one.column.alpha
              %input{ :type => 'text', :name => 'key', :value => seating.key, :disabled => '' }
            .three.columns
              %input{ :type => 'text', :name => 'title', :value => seating.title }
            .four.columns
              %input{ :type => 'text', :name => 'starts_at', :value => seating.local_time }
            .two.columns.omega
              %input{ :type => 'submit', :value => 'Uppdatera' }

