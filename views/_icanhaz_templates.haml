%script#tweets_tpl{ type: 'text/html' }
  .sixteen.columns
    %h1
      Tweets taggade
      %a{ href: 'https://twitter.com/#!/search/realtime/%23athegajul' } #athegajul
  .sixteen.columns.alpha.omega
    %ul.tweets
      {{#items}}
      %li.tweet.row
        .two.columns
          %img{ src: "{{#user}}{{profile_image_url_https}}{{/user}}", width: 100, height: 100 }
