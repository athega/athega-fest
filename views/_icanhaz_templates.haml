          %a.user{ href: "https://twitter.com/{{#user}}{{screen_name}}{{/user}}"} {{#user}}{{screen_name}}{{/user}}
          %span.name {{#user}}{{name}}{{/user}}
        .thirteen.columns
          %span.text {{{html}}}
          {{#entities}}{{#media}}
