%script#tweets_tpl{ type: 'text/html' }
  .sixteen.columns
    %h1
      Tweets taggade
      %a{ href: 'https://twitter.com/#!/search/realtime/%23athegajul' } #athegajul
  .sixteen.columns.alpha.omega
    %ul.tweets
      {{#items}}
      %li.tweet.row
        .two.columns
          %img{ src: "{{profile_image_url}}", width: 100, height: 100 }
        .ten.columns
          %a.user{ href: "{{url}}"} {{from_user}}
          %span.name {{from_user_name}}
        .thirteen.columns
          %span.text {{{html}}}
          %div.timestamp{ data: { timestamp: "{{created_at}}" } } {{created_at}}
      {{/items}}
